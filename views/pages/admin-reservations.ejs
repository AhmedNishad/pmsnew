  <!-- style css -->
  <link rel="stylesheet" href="/public/css/style-business.css">
  <!-- page title -->
  <title>Admin</title>
  <meta name="robots" content="noindex">
</head>

<body>

  <!-- page wrapper -->

    <!-- menu -->
    <%- include("../partials/admin-nav") %>
    <!-- menu end -->

  
      <main class="container-fluid">
        <h5>Reservation List</h5>
        
        <% if(reservations.length > 0){ %>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Course</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
             <tbody>
                <%  
            for(let i = 0; i < reservations.length; i++){
                let reservation = reservations[i];
                %>
                <tr>
                    <td><%= reservation.name %></td> 
                    <td><%= reservation.email %></td> 
                    <td><%= reservation.phoneNumber %></td> 
                    <td><%= reservation.course %></td> 
                    <td><%= reservation.type %></td>    
                    <td><%= reservation.date %></td> 
                    <td><a class="btn btn-danger" href="/reservations/<%= reservation._id %>/delete" >Delete</a></td>
                </tr>
                  
                <%
            }
            %> 
            </tbody>
        </table>
        <% }else{ %>
            <h5>No Reservations</h5>
            <% } %>

      <!-- footer -->
      <!-- footer end -->

      

    </main>

  <!-- page wrapper end -->

